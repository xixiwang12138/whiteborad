<!--           src="{{index == curPageIndex ? item.selectedIconPath : item.iconPath}}"-->
<!--           mode="{{item.command ? 'widthFix': 'aspectFit'}}" />-->
    <text style="color: {{curPageIndex === index ? selectedColor : color}}">{{item.text}}</text>
  </view>
</view>
