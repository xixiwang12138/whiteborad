  <view class="register-page" wx:if="{{isNewer}}">
    <image src="../../assets/background-logo.png" style="width:128vw;height: 62vh;position: absolute;left: -14vw;opacity: 0.6;" class="background-logo"></image>
    <image class="homi2" src="../../assets/logo-text.png" mode="heightFix"></image>
    <view class="avatar-container">
      <view class="effect"/>
      <image class="avatar" src="{{info.avatarUrl}}" mode="aspectFill"/>
    </view>
    <view class="gender-container">
      <view class="gender-box male {{info.gender == 1 ? 'selected' : ''}}"
            bind:tap="onMaleTap">
            <image src="../../assets/male.png" style="width: 31px;height:31px;padding-top: 5px;" ></image>
            </view>
      <view class="gender-box female {{info.gender == 2 ? 'selected' : ''}}"
            bind:tap="onFemaleTap">
            <image src="../../assets/female.png" style="width: 25px;height:34px;padding-top: 4px;"></image>
            </view>
    </view>
    <view class="name-container">
      <view class="name">
        <input class="name-input" placeholder="输入你的游戏昵称"
               maxlength="8"
               value="{{info.name}}" bind:input="onNameInput"/>
      </view>
    </view>
    <view class="slogan-container">
      <textarea class="slogan" placeholder="输入你的Slogan吧！"
                adjust-position="{{false}}" focus="{{false}}"
                maxlength="40" cursor-spacing="10"
                value="{{info.slogan}}" bind:input="onSloganInput"/>
    </view>
    <view class="submit" bind:tap="onSubmit">完成</view>
  </view>

  <view class="bubble-container">
    <view wx:for="{{bubbles}}" class="round"
          style="position: absolute; top: {{item.top}}%; left: {{item.left}}%; display: {{item.visible ? 'block' : 'none'}}"/>
  </view>
